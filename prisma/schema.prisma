generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @map("_id") @db.ObjectId() @default(auto())
  name          String
  joinDate      DateTime    @default(now())
  username      String      @unique
  password      String
  role          String
  branchId      String      @db.ObjectId()
  branch        Branch      @relation(fields: [branchId], references: [id])
  companyId     String      @db.ObjectId()
  company       Company     @relation(fields: [companyId], references: [id])

  CreatedInviteCode InviteCode[]

}

model Company {
  id            String      @id @map("_id") @db.ObjectId() @default(auto())
  name          String      @unique

  Employee      User[]
  Branch        Branch[]
  stock         Product[]
}

model Branch {
  id            String      @id @map("_id") @db.ObjectId() @default(auto())
  name          String
  companyId     String      @db.ObjectId()
  company       Company     @relation(fields: [companyId], references: [id])

  //Setting
  lowestNoti    Int
  provider      String
  dependencies  String

  Stock         Product[]
  User          User[]
}

model InviteCode {
  id            String      @id @map("_id") @db.ObjectId() @default(auto())
  code          String      @unique
  providedRole  String
  creater       User        @relation(fields: [createrId], references: [id])
  createrId     String      @db.ObjectId() @unique
  expiredDate   DateTime
  createDate    DateTime    @default(now())

  isUse         Boolean     @default(false)
}

model Product {
  id            String      @id @map("_id") @db.ObjectId() @default(auto())
  name          String
  price         Int
  remain        Int
  latestRefill  DateTime
  latestEdit    DateTime
  useInBranch   Branch      @relation(fields: [branchId], references: [id])
  branchId      String      @db.ObjectId()
  useInCompany  Company     @relation(fields: [companyId], references: [id])
  companyId     String      @db.ObjectId()
}